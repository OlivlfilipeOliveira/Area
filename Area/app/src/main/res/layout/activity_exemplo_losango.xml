<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10sp"
        android:textColor="#151570"/>

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Em um losango, onde a medida da diagonal maior é o dobro da medida da diagonal menor. Sabendo que D = 50cm, a medida da área desse losango é:"
        android:layout_below="@+id/textView12"
        android:textSize="25dp"
        android:layout_margin="10sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d = 50/2=>25cm"
        android:textSize="25dp"
        android:textColor="#B22222"
        android:layout_below="@+id/texto"/>

    <TextView
        android:id="@+id/A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A=(50*25)/2"
        android:textSize="25dp"
        android:textColor="#B22222"
        android:layout_below="@+id/d"/>

    <TextView
        android:id="@+id/A2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A=1259/2"
        android:textSize="25dp"
        android:textColor="#B22222"
        android:layout_below="@+id/A1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A=625cm²"
        android:textSize="25dp"
        android:textColor="#B22222"
        android:layout_below="@+id/A2"/>
</RelativeLayout>